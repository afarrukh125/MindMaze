<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/vmName"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="moduleName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/indivPriorityVal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vmViewResource"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:text="Resources"
        app:layout_constraintBottom_toTopOf="@+id/vmViewDeadlines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indivPriorityVal" />

    <Button
        android:id="@+id/vmViewDeadlines"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:text="Deadlines"
        app:layout_constraintBottom_toTopOf="@+id/vmInvite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vmViewResource" />

    <Button
        android:id="@+id/vmInvite"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:text="Invite Users"
        app:layout_constraintBottom_toTopOf="@+id/leaveModuleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vmViewDeadlines" />

    <Button
        android:id="@+id/leaveModuleButton"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:text="Leave Module"
        app:layout_constraintBottom_toTopOf="@+id/indivBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vmInvite" />

    <TextView
        android:id="@+id/indivPriorityVal"
        android:layout_width="242dp"
        android:layout_height="19dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="priorityValue"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/vmViewResource"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vmName" />

    <Button
        android:id="@+id/indivBackButton"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="245dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaveModuleButton" />
</android.support.constraint.ConstraintLayout>