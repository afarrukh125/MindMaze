<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="355dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cnTitle"
            android:hint="Note Title " android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/cnContent"/>
    <EditText
            android:layout_width="355dp"
            android:layout_height="425dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/cnContent"
            android:hint="Message" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnTitle" app:layout_constraintBottom_toTopOf="@+id/cnCreate"/>
    <Button
            android:text="Create Note"
            android:layout_width="355dp"
            android:layout_height="37dp"
            android:id="@+id/cnCreate" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cnCancel" app:layout_constraintTop_toBottomOf="@+id/cnContent"/>
    <Button
            android:text="Cancel"
            android:layout_width="355dp"
            android:layout_height="38dp"
            android:id="@+id/cnCancel"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnCreate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"/>
</android.support.constraint.ConstraintLayout>