<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="Note"
            android:layout_width="302dp"
            android:layout_height="47dp"
            android:id="@+id/crNote" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="112dp" app:layout_constraintTop_toBottomOf="@+id/crWhich"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintBottom_toTopOf="@+id/crImage"/>
    <TextView
            android:text="whichResource"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="271dp"
            android:layout_height="51dp"
            android:id="@+id/crWhich" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"/>
    <Button
            android:text="Image"
            android:layout_width="302dp"
            android:layout_height="47dp"
            android:id="@+id/crImage"
            app:layout_constraintTop_toBottomOf="@+id/crNote" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/crDecideBack"/>
    <Button
            android:text="Back "
            android:layout_width="302dp"
            android:layout_height="47dp"
            android:id="@+id/crDecideBack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/crImage"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="229dp"/>
</android.support.constraint.ConstraintLayout>