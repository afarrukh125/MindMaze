<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.thirtyone.group.mindmaze">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".android.activities.MainMenuActivity" />
        <activity android:name=".android.activities.registration.RegisterActivity" />
        <activity android:name=".android.activities.PreloadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".android.activities.registration.LoginActivity" />
        <activity android:name=".android.activities.MindMazeActivity" />
        <activity android:name=".android.activities.module.CreateModuleActivity" />
        <activity android:name=".android.activities.module.ViewModulesActivity" />
        <activity android:name=".android.activities.module.ViewIndividualModuleActivity"/>
        <activity android:name=".android.activities.module.resources.ViewResourcesActivity"/>
        <activity android:name=".android.activities.module.resources.CreateResourceActivity"/>
        <activity android:name=".android.activities.module.invites.InviteUserActivity"/>
        <activity android:name=".android.activities.module.invites.ViewInvitesActivity"/>
        <activity android:name=".android.activities.module.invites.ViewIndividualInviteActivity"/>
        <activity android:name=".android.activities.reminder.CreateReminderActivity"/>
        <activity android:name=".android.activities.reminder.ViewRemindersActivity"/>
        <activity android:name=".android.activities.reminder.SelectTimeActivity"/>
        <activity android:name=".android.activities.module.resources.CreateNoteActivity"/>
        <activity android:name=".android.activities.module.resources.UploadImageActivity"/>
        <activity android:name=".android.activities.module.resources.ViewNoteActivity"/>
        <activity android:name=".android.activities.module.resources.EditNoteActivity" />
        <activity android:name=".android.activities.module.resources.ViewImageActivity" />
    </application>

</manifest>